{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Parameters": {
    "env": {
      "Type": "String"
    }
  },
  "Resources": {
    "SNSTopic": {
      "Type": "AWS::SNS::Topic",
      "Properties": {
        "TopicName": {
          "Fn::Sub": "sns-topic-${AWS::StackName}-${env}"
        }
      }
    },
    "SNSSubscriptionEmail": {
      "Type": "AWS::SNS::Subscription",
      "Properties": {
        "Protocol": "email",
        "TopicArn": {
          "Ref": "SNSTopic"
        },
        "Endpoint": "nakachi@ad-scope.co.jp"
      }
    }
  },
  "Outputs": {
    "snsTopicARN": {
      "Value": {
        "Ref": "SNSTopic"
      }
    }
  },
  "Description": "{\"createdOn\":\"Mac\",\"createdBy\":\"Amplify\",\"createdWith\":\"12.12.6\",\"stackType\":\"custom-customCloudformation\",\"metadata\":{}}"
}